<div class="container mt-4">

  <h1 class="fw-bold text-orange mb-4 text-center">Invitations FVE</h1>

  <div class="text-center mb-3">
    <%= link_to "Nouvelle invitation",
                new_admin_fve_invitation_path,
                class: "btn btn-orange fw-semibold" %>
  </div>

  <div class="row g-4">
    <% @invitations.each do |inv| %>
      <div class="col-md-6 col-lg-4">
        <div class="card shadow-sm rounded-4 p-3 h-100">

          <h5 class="fw-bold text-orange mb-1"><%= inv.email %></h5>

          <p class="text-muted mb-2">
            <strong>Agence :</strong> <%= inv.agency.presence || "—" %><br>
            <strong>Premium :</strong>
            <%= inv.premium? ? "Oui" : "Non" %><br>
            <strong>Expire :</strong>
            <%= l inv.expires_at, format: :long %>
          </p>

          <% if inv.used? %>
            <p class="badge bg-success">Utilisée</p>
          <% elsif inv.expired? %>
            <p class="badge bg-danger">Expirée</p>
          <% else %>
            <p class="badge bg-warning text-dark">Active</p>
          <% end %>

          <div class="mt-3">
            <%= link_to "Supprimer",
                        admin_fve_invitation_path(inv),
                        method: :delete,
                        data: { confirm: "Supprimer cette invitation ?" },
                        class: "btn btn-sm btn-danger" %>
          </div>

        </div>
      </div>
    <% end %>
  </div>

</div>
