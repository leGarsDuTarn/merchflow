<div class="container mt-4">

  <h1 class="fw-bold text-orange mb-4 text-center">
    Modifier <%= @user.full_name %>
  </h1>

  <div class="card shadow-sm rounded-4 p-4">

    <%= form_with model: [:admin, @user], local: true do |f| %>

      <div class="row g-3">

        <div class="col-md-6">
          <%= f.label :firstname, "Prénom", class: "form-label fw-semibold" %>
          <%= f.text_field :firstname, class: "form-control" %>
        </div>

        <div class="col-md-6">
          <%= f.label :lastname, "Nom", class: "form-label fw-semibold" %>
          <%= f.text_field :lastname, class: "form-control" %>
        </div>

        <div class="col-md-12">
          <%= f.label :email, "Email", class: "form-label fw-semibold" %>
          <%= f.email_field :email, class: "form-control" %>
        </div>

        <div class="col-md-12">
          <%= f.label :phone_number, "Téléphone", class: "form-label fw-semibold" %>
          <%= f.text_field :phone_number, class: "form-control" %>
        </div>

        <hr>

        <div class="col-md-4">
          <%= f.label :allow_email, "Autorise email", class: "form-label fw-semibold" %><br>
          <%= f.check_box :allow_email %>
        </div>

        <div class="col-md-4">
          <%= f.label :allow_phone, "Autorise téléphone", class: "form-label fw-semibold" %><br>
          <%= f.check_box :allow_phone %>
        </div>

        <div class="col-md-4">
          <%= f.label :allow_identity, "Autorise nom/prénom", class: "form-label fw-semibold" %><br>
          <%= f.check_box :allow_identity %>
        </div>

      </div>

      <div class="mt-4">
        <%= f.submit "Sauvegarder", class: "btn btn-orange btn-lg w-100 fw-bold" %>
      </div>

    <% end %>
  </div>

</div>

