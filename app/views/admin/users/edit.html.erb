<div class="container mt-4">

  <h1 class="fw-bold text-orange mb-4 text-center">
    Profil : <%= @user.full_name %>
  </h1>

  <div class="card shadow-sm rounded-4 p-4">

    <div class="row g-3">

      <!-- Prénom -->
      <div class="col-md-6">
        <label class="form-label fw-semibold">Prénom</label>
        <input class="form-control" value="<%= @user.firstname %>" readonly>
      </div>

      <!-- Nom -->
      <div class="col-md-6">
        <label class="form-label fw-semibold">Nom</label>
        <input class="form-control" value="<%= @user.lastname %>" readonly>
      </div>

      <!-- Email -->
      <div class="col-md-12">
        <label class="form-label fw-semibold">Email</label>
        <input class="form-control" value="<%= @user.email %>" readonly>
      </div>

      <!-- Téléphone -->
      <div class="col-md-12">
        <label class="form-label fw-semibold">Téléphone</label>
        <input class="form-control" value="<%= @user.phone_number %>" readonly>
      </div>

      <hr>

      <!-- Confidentialité -->
      <div class="col-md-4">
        <label class="form-label fw-semibold">Autorise email</label>
        <input class="form-control" value="<%= @user.allow_email ? 'Oui' : 'Non' %>" readonly>
      </div>

      <div class="col-md-4">
        <label class="form-label fw-semibold">Autorise téléphone</label>
        <input class="form-control" value="<%= @user.allow_phone ? 'Oui' : 'Non' %>" readonly>
      </div>

      <div class="col-md-4">
        <label class="form-label fw-semibold">Autorise identité</label>
        <input class="form-control" value="<%= @user.allow_identity ? 'Oui' : 'Non' %>" readonly>
      </div>

    </div>

    <div class="mt-4 text-center">
      <%= link_to "Retour", admin_users_path, class: "btn btn-orange-outline fw-bold px-4" %>
    </div>

  </div>

</div>

