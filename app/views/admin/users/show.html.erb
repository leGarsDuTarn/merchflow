<div class="container mt-4 mb-5">

  <h1 class="fw-bold text-orange mb-4 text-center">
    <%= @user.full_name %>
  </h1>

  <div class="card shadow-sm rounded-4 p-4">

    <p><strong>Email :</strong> <%= @user.email %></p>
    <p><strong>Rôle :</strong> <%= @user.role %></p>
    <p><strong>Téléphone :</strong> <%= @user.phone_number.presence || "—" %></p>

    <p>
      <strong>Premium :</strong>
      <% if @user.premium? %>
        <span class="badge bg-warning text-dark">Actif</span>
      <% else %>
        <span class="badge bg-secondary">Inactif</span>
      <% end %>
    </p>

    <div class="mt-3 d-flex gap-3">
      <%= link_to "Modifier",
                  edit_admin_user_path(@user),
                  class: "btn btn-orange" %>

      <%= link_to "Activer / Désactiver Premium",
                  toggle_premium_admin_user_path(@user),
                  method: :patch,
                  class: "btn btn-orange-outline" %>
    </div>

  </div>
</div>

