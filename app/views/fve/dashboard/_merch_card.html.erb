<div class="col-md-6 col-lg-4">
  <div class="card shadow-sm p-3 rounded-4 h-100 border-0 position-relative">

    <div class="d-flex justify-content-between align-items-start mb-2">
      <div>
        <h5 class="fw-bold text-orange mb-1">
          <%= merch.firstname %> <%= merch.lastname %>
        </h5>
        <p class="text-muted mb-0 small">
          <i class="bi bi-geo-alt-fill me-1"></i><%= merch.city %>
        </p>
      </div>

      <% if is_favorite %>
         <i class="bi bi-heart-fill text-danger fs-5"></i>
      <% else %>
         <i class="bi bi-heart text-muted fs-5"></i>
      <% end %>
    </div>

    <div class="d-grid gap-2 mt-auto pt-3">
      <%= link_to "Proposer Mission",
          "#",
          class: "btn btn-sm btn-orange fw-semibold" %>

      <div class="d-flex gap-2">
        <%= link_to "Profil", fve_merch_path(merch), class: "btn btn-sm btn-light flex-grow-1" %>
        <%= link_to "Planning", fve_planning_path(merch), class: "btn btn-sm btn-light flex-grow-1" %>
      </div>
    </div>

  </div>
</div>
