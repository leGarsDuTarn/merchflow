<div class="container mt-4 mb-5">

  <!-- TITRE -->
  <h1 class="fw-bold text-orange text-center mb-4">
    Merch disponibles
  </h1>

  <p class="text-center text-muted mb-5">
    Liste des merch accessibles à votre force de vente.
  </p>

  <% if @merch.any? %>
    <div class="row g-4">

      <% @merch.each do |m| %>
        <div class="col-md-6 col-lg-4">
          <div class="card shadow-sm rounded-4 p-3 h-100">

            <!-- NOM affiché selon privacy -->
            <h5 class="fw-bold text-orange mb-1">
              <%= m.displayable_name(current_user) %>
            </h5>

            <p class="text-muted mb-2">
              <strong>Ville :</strong>
              <%= m.city.presence || "—" %>
              <br>
              <strong>Code postal :</strong>
              <%= m.zipcode.presence || "—" %>
            </p>

            <!-- CONTACT (seulement si premium + autorisé) -->
            <div class="mb-2">
              <strong>Email :</strong>
              <%= m.displayable_email(current_user) || "<span class='text-muted'>Non disponible</span>".html_safe %>
              <br>

              <strong>Téléphone :</strong>
              <%= m.displayable_phone(current_user) || "<span class='text-muted'>Non disponible</span>".html_safe %>
            </div>

            <!-- BOUTON ACCÈS PROFIL -->
            <div class="mt-3 d-grid">
              <%= link_to "Voir le profil",
                    fve_merch_path(m),
                    class: "btn btn-orange fw-semibold" %>
            </div>

          </div>
        </div>
      <% end %>

    </div>

  <% else %>
    <p class="text-center text-muted mt-4">
      Aucun merch disponible pour le moment.
    </p>
  <% end %>

</div>

