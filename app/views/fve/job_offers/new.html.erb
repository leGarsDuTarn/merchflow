<div class="bg-light min-vh-100 py-5">
  <div class="container">

    <div class="row justify-content-center mb-4">
      <div class="col-lg-10">
        <div class="d-flex align-items-center justify-content-between">
          <div class="d-flex align-items-center">
            <%= link_to job_offers_path, class: "btn btn-white bg-white rounded-circle shadow-sm me-4 p-0 d-flex align-items-center justify-content-center transition-hover text-decoration-none", style: "width: 55px; height: 55px;" do %>
              <i class="fa-solid fa-arrow-left text-muted fs-5"></i>
            <% end %>

            <div>
              <div class="d-flex align-items-center gap-2">
                <span class="badge bg-orange-light text-orange border border-orange-subtle rounded-pill px-2 py-1 small fw-bold">
                  <%= @job_offer.new_record? ? "NOUVEAU" : "EDITION" %>
                </span>
                <span class="text-muted small fw-bold text-uppercase ls-1">Espace Recruteur</span>
              </div>
              <h2 class="fw-bold text-dark m-0 mt-1" style="letter-spacing: -0.5px;">
                <%= @job_offer.new_record? ? "Publier une nouvelle mission" : "Modifier l'offre ##{@job_offer.id}" %>
              </h2>
            </div>
          </div>

          <div class="d-none d-md-block text-end opacity-50">
            <i class="fa-solid fa-layer-group fa-2x text-muted mb-1"></i>
            <small class="d-block fw-bold text-muted" style="font-size: 0.7rem;">FORMULAIRE PRO</small>
          </div>
        </div>
      </div>
    </div>

    <div class="row justify-content-center">
      <div class="col-lg-10">
        <%= render 'form', job_offer: @job_offer %>
      </div>
    </div>

  </div>
</div>

<style>
  /* Amélioration globale des inputs pour le style MerchFlow */
  .form-control:focus, .form-select:focus, .form-check-input:focus {
    border-color: #fd7e14 !important;
    box-shadow: 0 0 0 0.25rem rgba(253, 126, 20, 0.15) !important;
    background-color: #fff !important;
  }

  .transition-hover {
    transition: all 0.2s ease-in-out;
  }
  .transition-hover:hover {
    transform: translateY(-3px);
    box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.1) !important;
  }

  .bg-orange-light { background-color: #fff3e0; }
  .text-orange { color: #fd7e14; }
  .ls-1 { letter-spacing: 0.5px; }

  /* Pour masquer les flèches des inputs number */
  input[type=number]::-webkit-inner-spin-button,
  input[type=number]::-webkit-outer-spin-button {
    -webkit-appearance: none;
    margin: 0;
  }
</style>
