<div class="container my-5">

  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h1 class="fw-bold text-dark m-0">Gestion de la mission</h1>
      <p class="text-muted mb-0">
        <%= @job_offer.title %>
      </p>
    </div>

    <%= link_to fve_job_offers_path,
                class: "btn btn-light shadow-sm text-muted border rounded-circle p-3",
                style: "width: 50px; height: 50px; display: flex; align-items: center; justify-content: center;" do %>
      <i class="fa-solid fa-arrow-left"></i>
    <% end %>
  </div>

  <div class="row g-4">

    <div class="col-lg-5">
      <div class="card shadow border-0 rounded-4 mb-4 position-relative overflow-hidden">

        <div class="card-body p-4">
          <div class="d-flex align-items-center mb-4">
            <div class="bg-orange-light text-orange rounded-3 d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
              <i class="fa-solid fa-bullhorn fs-4"></i>
            </div>
            <div>
              <h5 class="fw-bold mb-0 text-dark"><%= @job_offer.store_name %></h5>
              <small class="text-muted"><%= @job_offer.company_name %></small>
            </div>
          </div>

          <div class="d-flex align-items-start mb-3">
            <i class="fa-solid fa-location-dot text-orange mt-1 me-2"></i>
            <span class="text-muted small"><%= @job_offer.address %>, <%= @job_offer.zipcode %> <%= @job_offer.city %></span>
          </div>

          <hr class="text-muted opacity-25">

          <div class="bg-light rounded-4 p-3 mb-3">
            <div class="d-flex align-items-center mb-2">
              <i class="fa-regular fa-calendar text-orange me-2"></i>
              <span class="fw-bold small"><%= l(@job_offer.start_date.to_date, format: :long).capitalize %></span>
            </div>
            <div class="row g-2 text-center mt-1">
              <div class="col-6">
                <div class="bg-white rounded-3 p-2 border border-light">
                  <small class="text-muted d-block" style="font-size: 0.7rem;">Début</small>
                  <span class="fw-bold small"><%= @job_offer.start_date.strftime("%H:%M") %></span>
                </div>
              </div>
              <div class="col-6">
                <div class="bg-white rounded-3 p-2 border border-light">
                  <small class="text-muted d-block" style="font-size: 0.7rem;">Fin</small>
                  <span class="fw-bold small"><%= @job_offer.end_date.strftime("%H:%M") %></span>
                </div>
              </div>
            </div>
          </div>

          <div class="row g-2 mt-1 text-center">
            <div class="col-6">
              <div class="border border-orange-subtle bg-orange-light rounded-3 p-3 h-100">
                <i class="fa-solid fa-euro-sign text-orange mb-1"></i>
                <div class="fw-bold text-dark"><%= @job_offer.hourly_rate %> €</div>
                <small class="text-muted" style="font-size: 0.75rem;">Taux horaire</small>
              </div>
            </div>
            <div class="col-6">
              <div class="border border-orange-subtle bg-orange-light rounded-3 p-3 h-100">
                <i class="fa-solid fa-tag text-orange mb-1"></i>
                <div class="fw-bold text-dark"><%= @job_offer.mission_type.capitalize %></div>
                <small class="text-muted" style="font-size: 0.75rem;">Type mission</small>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-lg-7">
      <div class="card shadow border-0 rounded-4 h-100">
        <div class="card-body p-4">
          <div class="d-flex justify-content-between align-items-center mb-4">
            <h5 class="fw-bold text-orange m-0">Candidatures reçues</h5>
            <span class="badge bg-orange-light text-orange rounded-pill px-3">
              <%= @job_applications.count %> au total
            </span>
          </div>

          <% if @job_applications.any? %>
            <div class="d-flex flex-column gap-3">
              <% @job_applications.each do |app| %>
                <div class="p-3 rounded-4 border <%= app.status == 'accepted' ? 'border-success bg-success bg-opacity-10' : 'border-light bg-light' %>">
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center">
                      <div class="bg-white rounded-circle d-flex align-items-center justify-content-center border shadow-sm me-3" style="width: 45px; height: 45px;">
                        <i class="fa-solid fa-user text-muted"></i>
                      </div>
                      <div>
                        <h6 class="fw-bold mb-0 text-dark"><%= app.merch.displayable_name(current_user) %></h6>
                        <small class="text-muted" style="font-size: 0.75rem;">
                          Postulé le <%= l app.created_at, format: "%d/%m/%Y" %>
                        </small>
                      </div>
                    </div>

                    <div>
                      <% if app.status == 'pending' %>
                        <%= button_to accept_candidate_fve_job_offer_path(@job_offer, application_id: app.id),
                                      method: :post,
                                      data: { turbo_confirm: "Confirmer le recrutement ? Cela générera le contrat et le planning." },
                                      class: "btn btn-orange btn-sm rounded-pill px-3 fw-bold" do %>
                          Recruter
                        <% end %>
                      <% else %>
                        <span class="badge bg-success rounded-pill px-3">
                          <i class="fa-solid fa-check me-1"></i> Recruté
                        </span>
                      <% end %>
                    </div>
                  </div>

                  <% if app.message.present? %>
                    <div class="mt-3 bg-white p-2 rounded-3 border-start border-orange border-3 small italic text-muted">
                      "<%= app.message %>"
                    </div>
                  <% end %>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-5">
              <i class="fa-solid fa-hourglass-start fa-3x text-muted mb-3 opacity-25"></i>
              <p class="text-muted">Aucune candidature reçue pour le moment.</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
