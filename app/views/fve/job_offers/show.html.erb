<div class="bg-light min-vh-100 py-5">
  <div class="container">

    <%# --- EN-TÊTE --- %>
    <div class="d-flex justify-content-between align-items-center mb-5">
      <div class="d-flex align-items-center">
        <%= link_to fve_job_offers_path, class: "btn btn-white bg-white rounded-circle shadow-sm me-4 d-flex align-items-center justify-content-center transition-hover text-decoration-none", style: "width: 50px; height: 50px;" do %>
          <i class="fa-solid fa-arrow-left text-orange fs-5"></i>
        <% end %>
        <div>
          <div class="d-flex align-items-center gap-2 mb-1">
            <% if @job_offer.status == 'published' %>
              <span class="badge bg-success bg-opacity-10 text-success rounded-pill px-3 border border-success border-opacity-25">Publiée</span>
            <% else %>
              <span class="badge bg-secondary bg-opacity-10 text-secondary rounded-pill px-3 border border-secondary border-opacity-25">Brouillon</span>
            <% end %>
            <span class="text-muted small fw-bold text-uppercase ls-1">Réf: #<%= @job_offer.id %></span>
          </div>
          <h2 class="fw-bold text-dark m-0"><%= @job_offer.title %></h2>
        </div>
      </div>

      <div class="d-flex gap-2">
        <%= link_to fve_job_offers_path, class: "btn btn-white fw-bold rounded-pill px-4 shadow-sm text-muted" do %>
          <i class="fa-solid fa-box-archive me-2"></i>Archiver
        <% end %>
        <%= link_to edit_fve_job_offer_path(@job_offer), class: "btn btn-orange rounded-pill px-4 py-2 fw-bold shadow-sm transition-hover" do %>
          <i class="fa-solid fa-pen-to-square me-2"></i> Modifier
        <% end %>
      </div>
    </div>

    <div class="row g-4">

      <%# ===== COLONNE GAUCHE (CONTEXTE & PLANNING) ===== %>
      <div class="col-lg-5">

        <%# --- CARTE LIEU & INFO --- %>
        <div class="card shadow-sm border-0 rounded-4 mb-4 overflow-hidden">
          <div class="card-body p-4">

            <div class="d-flex align-items-center mb-4">
              <div class="bg-orange-light text-orange rounded-4 d-flex align-items-center justify-content-center me-3 shadow-sm" style="width: 55px; height: 55px;">
                <i class="fa-solid fa-store fs-3"></i>
              </div>
              <div>
                <h5 class="fw-bold mb-0 text-dark"><%= @job_offer.store_name %></h5>
                <small class="text-muted fw-bold text-uppercase ls-1"><%= @job_offer.company_name %></small>
              </div>
            </div>

            <div class="d-flex align-items-start mb-3 bg-light p-3 rounded-4 border border-light">
              <i class="fa-solid fa-location-dot text-orange mt-1 me-3"></i>
              <div>
                <span class="d-block fw-bold text-dark"><%= @job_offer.address %></span>
                <span class="text-muted small"><%= @job_offer.zipcode %> <%= @job_offer.city %></span>
              </div>
            </div>

            <div class="bg-light p-3 rounded-4 border border-light">
               <h6 class="small fw-bold text-muted text-uppercase ls-1 mb-2">Description</h6>
               <p class="small text-muted mb-0" style="line-height: 1.6;"><%= @job_offer.description %></p>
            </div>
          </div>
        </div>

        <%# --- CARTE PLANNING DÉTAILLÉ (LE COEUR DU SYSTÈME) --- %>
        <div class="card shadow-sm border-0 rounded-4 mb-4">
          <div class="card-header bg-white border-0 pt-2 px-4">
            <h6 class="fw-bold text-dark my-2"><i class="fa-regular fa-calendar-days text-orange me-2"></i>Planning Détaillé</h6>
          </div>
          <div class="card-body p-4">
            <% if @job_offer.job_offer_slots.any? %>
              <div class="d-flex flex-column gap-2">
                <% @job_offer.job_offer_slots.order(:date).each do |slot| %>
                  <div class="d-flex align-items-center justify-content-between p-3 rounded-3 border border-light bg-white shadow-sm transition-hover">

                    <%# Date %>
                    <div class="d-flex align-items-center">
                      <div class="bg-orange-light text-orange rounded-3 d-flex flex-column align-items-center justify-content-center me-3" style="width: 45px; height: 45px;">
                        <span class="fw-bold lh-1" style="font-size: 1.1rem;"><%= slot.date.day %></span>
                        <span class="small fw-bold text-uppercase lh-1" style="font-size: 0.6rem;"><%= l(slot.date, format: "%b") %></span>
                      </div>
                      <div>
                        <span class="d-block fw-bold text-dark small"><%= l(slot.date, format: "%A").capitalize %></span>
                      </div>
                    </div>

                    <%# Horaires %>
                    <div class="text-end">
                      <div class="badge bg-gray-100 text-dark border border-secondary border-opacity-10 rounded-pill px-3 py-2 mb-1">
                        <%= slot.start_time.strftime("%H:%M") %> <i class="fa-solid fa-arrow-right-long mx-1 opacity-50"></i> <%= slot.end_time.strftime("%H:%M") %>
                      </div>
                      <% if slot.break_start_time %>
                        <div class="small text-muted" style="font-size: 0.7rem;">
                          <i class="fa-solid fa-mug-hot text-orange me-1"></i>Pause: <%= slot.break_start_time.strftime("%H:%M") %>-<%= slot.break_end_time.strftime("%H:%M") %>
                        </div>
                      <% end %>
                    </div>

                  </div>
                <% end %>
              </div>
            <% else %>
              <div class="text-center py-3 text-muted small">Aucun créneau défini</div>
            <% end %>
          </div>
        </div>

        <%# --- CARTE FINANCE --- %>
        <div class="card shadow-sm border-0 rounded-4 overflow-hidden">
          <div class="card-body p-0">
             <div class="row g-0">
               <div class="col-6 border-end border-light p-4 text-center">
                 <small class="text-muted text-uppercase fw-bold" style="font-size: 0.65rem;">Taux Horaire</small>
                 <div class="fw-bold text-dark fs-5"><%= number_to_currency(@job_offer.hourly_rate) %></div>
               </div>
               <div class="col-6 p-4 text-center bg-orange-light bg-opacity-10">
                 <small class="text-muted text-uppercase fw-bold" style="font-size: 0.65rem;">Primes (IFM/CP)</small>
                 <div class="fw-bold text-orange fs-5">+ <%= (@job_offer.ifm_rate + @job_offer.cp_rate).to_i %>%</div>
               </div>
             </div>
             <div class="bg-light p-3 text-center border-top border-light">
               <% if @job_offer.km_rate > 0 %>
                 <span class="badge bg-white text-dark border shadow-sm rounded-pill py-2 px-3">
                   <i class="fa-solid fa-car text-orange me-2"></i>
                   <%= @job_offer.km_rate %>€/km
                   <% if @job_offer.km_unlimited %>
                     <span class="text-success fw-bold">(Illimité)</span>
                   <% elsif @job_offer.km_limit %>
                     <span class="text-muted">(Max <%= @job_offer.km_limit.to_i %>km)</span>
                   <% end %>
                 </span>
               <% else %>
                 <span class="text-muted small">Pas de défraiement kilométrique</span>
               <% end %>
             </div>
          </div>
        </div>

      </div>

      <%# ===== COLONNE DROITE (CANDIDATS) ===== %>
      <div class="col-lg-7">
        <div class="card shadow-sm border-0 rounded-4 h-100 overflow-hidden">
          <div class="card-header bg-white p-4 border-0 d-flex justify-content-between align-items-center">
            <h5 class="fw-bold text-dark m-0">
              <i class="fa-solid fa-users-viewfinder me-2 text-orange"></i>Candidatures
            </h5>
            <span class="badge bg-orange text-white rounded-pill px-3 py-2 fw-bold shadow-sm">
              <%= @job_applications.where.not(status: ['archived', 'rejected']).count %> en attente
            </span>
          </div>

          <div class="card-body p-4 pt-4">
            <% if @job_applications.any? %>
              <div class="d-flex flex-column gap-3">
                <% @job_applications.each do |app| %>

                  <div class="p-3 rounded-4 border border-light bg-white shadow-sm transition-hover position-relative overflow-hidden">
                    <%# Bandeau de statut vertical %>
                    <div class="position-absolute top-0 start-0 h-100" style="width: 4px; background-color: <%= job_status_color(app.status) %>;"></div>

                    <div class="d-flex justify-content-between align-items-center ps-2">

                      <div class="d-flex align-items-center">
                        <div class="bg-light rounded-circle d-flex align-items-center justify-content-center border border-white shadow-sm me-3" style="width: 50px; height: 50px;">
                          <i class="fa-solid fa-user fs-5 text-muted"></i>
                        </div>
                        <div>
                          <h6 class="fw-bold mb-0 text-dark"><%= app.merch.displayable_name(current_user) %></h6>
                          <div class="d-flex align-items-center gap-2">
                             <span class="badge bg-light text-muted border border-light rounded-pill px-2 py-0 small fw-normal">
                               <i class="fa-regular fa-clock me-1"></i><%= time_ago_in_words(app.created_at) %>
                             </span>
                          </div>
                        </div>
                      </div>

                      <div class="d-flex gap-2 align-items-center">
                        <% if app.status == 'pending' %>
                          <%= button_to accept_candidate_fve_job_offer_path(@job_offer, application_id: app.id),
                              method: :post,
                              class: "btn btn-orange btn-sm rounded-pill px-4 py-2 fw-bold shadow-sm transition-transform" do %>
                            <i class="fa-solid fa-check me-1"></i>Recruter
                          <% end %>

                          <%= button_to reject_candidate_fve_job_offer_path(@job_offer, application_id: app.id),
                              method: :post,
                              data: { turbo_confirm: "Êtes-vous sûr de vouloir refuser ce candidat ?" },
                              class: "btn btn-white text-danger btn-sm rounded-circle border border-danger border-opacity-25 shadow-sm p-0",
                              style: "width: 34px; height: 34px;" do %>
                            <i class="fa-solid fa-xmark"></i>
                          <% end %>

                        <% else %>
                          <%# Badge de statut (Accepté / Refusé) %>
                          <span class="badge rounded-pill px-3 py-2 <%= app.status == 'accepted' ? 'bg-success' : 'bg-danger' %>">
                            <%= app.status == 'accepted' ? 'Recruté' : 'Refusé' %>
                          </span>

                          <% if app.status == 'rejected' %>
                             <%# Petit bouton poubelle discret %>
                          <% end %>
                        <% end %>
                      </div>
                    </div>

                    <% if app.message.present? %>
                      <div class="mt-3 ms-5 bg-light p-3 rounded-3 border-start border-3 border-orange small italic text-muted">
                        <i class="fa-solid fa-quote-left text-orange me-2 opacity-50"></i><%= app.message %>
                      </div>
                    <% end %>
                  </div>
                <% end %>
              </div>
            <% else %>
              <div class="text-center py-5">
                <div class="bg-light rounded-circle d-inline-flex p-4 mb-3">
                   <i class="fa-solid fa-user-clock fa-2x text-muted opacity-50"></i>
                </div>
                <p class="fw-bold text-dark mb-1">Aucune candidature pour le moment</p>
                <p class="small text-muted">Dès qu'un Merch postule, il apparaîtra ici.</p>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
