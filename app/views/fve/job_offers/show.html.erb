<div class="bg-light min-vh-100 py-5">
  <div class="container">

    <div class="d-flex justify-content-between align-items-start mb-5">
      <div class="d-flex align-items-center">
        <%= link_to fve_job_offers_path, class: "btn btn-white bg-white rounded-circle shadow-sm me-4 d-flex align-items-center justify-content-center transition-hover text-decoration-none", style: "width: 55px; height: 55px; border: 1px solid #eee;" do %>
          <i class="fa-solid fa-arrow-left text-orange fs-4"></i>
        <% end %>
        <div>
          <h2 class="fw-bold text-dark m-0 mt-1"><%= @job_offer.title %></h2>
          <div class="d-flex align-items-center gap-2">
            <p class="text-muted small mb-0 fw-bold text-uppercase ls-1">Réf: #OFFRE-<%= @job_offer.id %></p>
          </div>
        </div>
      </div>

      <%= link_to edit_fve_job_offer_path(@job_offer), class: "btn btn-orange rounded-pill px-4 py-2 fw-bold shadow-sm transition-hover" do %>
        <i class="fa-solid fa-pen-to-square me-2"></i> Modifier l'offre
      <% end %>
    </div>

    <div class="row g-4">

      <div class="col-lg-5">
        <div class="card shadow-sm border-0 rounded-4 mb-4 overflow-hidden h-100">
          <div class="card-body p-4 p-md-5">

            <div class="d-flex align-items-center mb-4">
              <div class="bg-orange-light text-orange rounded-4 d-flex align-items-center justify-content-center me-3 shadow-sm" style="width: 55px; height: 55px;">
                <i class="fa-solid fa-store fs-3"></i>
              </div>
              <div>
                <h5 class="fw-bold mb-0 text-dark"><%= @job_offer.store_name %></h5>
                <small class="text-muted fw-bold text-uppercase ls-1" style="font-size: 0.65rem;"><%= @job_offer.company_name %></small>
              </div>
            </div>

            <div class="d-flex align-items-start mb-4 bg-light p-3 rounded-3 border border-white">
              <i class="fa-solid fa-location-dot text-orange mt-1 me-2"></i>
              <span class="text-muted small fw-bold"><%= @job_offer.address %>, <%= @job_offer.zipcode %> <%= @job_offer.city %></span>
            </div>

            <div class="row g-3 text-center">
              <div class="col-12">
                <div class="bg-dark text-white rounded-pill p-3 shadow-sm d-flex align-items-center justify-content-center">
                   <i class="fa-solid fa-users me-2 small opacity-75"></i>
                   <small class="fw-bold text-uppercase ls-1" style="font-size: 0.7rem;">Effectif requis : <%= @job_offer.headcount_required %> Merchs</small>
                </div>
              </div>
              <div class="col-6">
                <div class="border border-orange-subtle bg-orange-light rounded-4 p-3 shadow-sm">
                  <small class="text-muted d-block text-uppercase fw-bold mb-1" style="font-size: 0.6rem;">Base Brut</small>
                  <div class="fw-bold text-dark"><%= @job_offer.hourly_rate %> €/h</div>
                </div>
              </div>
              <div class="col-6">
                <div class="border border-orange-subtle bg-orange-light rounded-4 p-3 shadow-sm">
                  <small class="text-muted d-block text-uppercase fw-bold mb-1" style="font-size: 0.6rem;">Cumul Primes</small>
                  <div class="fw-bold text-orange">+ <%= (@job_offer.ifm_rate + @job_offer.cp_rate).to_i %>%</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="col-lg-7">
        <div class="card shadow-sm border-0 rounded-4 h-100 overflow-hidden">
          <div class="card-header bg-white p-4 border-0 d-flex justify-content-between align-items-center">
            <h5 class="fw-bold text-dark m-0">
              <i class="fa-solid fa-user-group me-2 text-orange"></i>Candidats postulants
            </h5>
            <span class="badge bg-orange text-white rounded-pill px-3 py-2 fw-bold">
              <%= @job_applications.count %>
            </span>
          </div>

          <div class="card-body p-4 pt-0">
            <% if @job_applications.any? %>
              <div class="d-flex flex-column gap-3">
                <% @job_applications.each do |app| %>

                  <div class="p-3 rounded-4 border transition-hover <%= job_status_card_class(app.status) %>">
                    <div class="d-flex justify-content-between align-items-center">

                      <div class="d-flex align-items-center">
                        <div class="bg-white rounded-circle d-flex align-items-center justify-content-center border shadow-sm me-3" style="width: 48px; height: 48px;">
                          <i class="fa-solid fa-user" style="color: <%= job_status_color(app.status) %>;"></i>
                        </div>
                        <div>
                          <h6 class="fw-bold mb-0 text-dark"><%= app.merch.displayable_name(current_user) %></h6>
                          <small class="text-muted opacity-75" style="font-size: 0.75rem;">
                            Postulé <%= time_ago_in_words(app.created_at) %>
                          </small>
                        </div>
                      </div>

                      <div class="d-flex gap-2 align-items-center">
                        <% if app.status == 'pending' %>
                          <%= button_to accept_candidate_fve_job_offer_path(@job_offer, application_id: app.id), method: :post, class: "btn btn-orange btn-sm rounded-pill px-3 fw-bold shadow-sm" do %>
                            Recruter
                          <% end %>
                          <%= button_to reject_candidate_fve_job_offer_path(@job_offer, application_id: app.id), method: :post, data: { turbo_confirm: "Écarter ce candidat ?" }, class: "btn btn-outline-danger btn-sm rounded-circle border-0" do %>
                            <i class="fa-solid fa-xmark"></i>
                          <% end %>
                        <% else %>
                          <%= job_status_badge(app.status) %>

                          <% if app.status == 'rejected' %>
                            <%= link_to fve_job_application_path(app), data: { turbo_method: :delete, turbo_confirm: "Supprimer définitivement ce candidat de la liste ?" }, class: "btn btn-link text-danger p-0 ms-2" do %>
                              <i class="fa-solid fa-trash-can opacity-50"></i>
                            <% end %>
                          <% end %>
                        <% end %>
                      </div>
                    </div>

                    <% if app.message.present? %>
                      <div class="mt-3 bg-white bg-opacity-50 p-3 rounded-3 border-start border-orange border-3 small italic text-muted">
                        "<%= app.message %>"
                      </div>
                    <% end %>
                  </div>
                <% end %>
              </div>
            <% else %>
              <div class="text-center py-5 opacity-50">
                <i class="fa-solid fa-user-slash fa-3x mb-3 text-muted"></i>
                <p class="fw-bold">Aucune candidature</p>
                <p class="small text-muted">Diffusez votre offre pour recevoir des profils.</p>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .ls-1 { letter-spacing: 0.5px; }
  .transition-hover { transition: all 0.2s ease-in-out; }
  .transition-hover:hover { transform: translateY(-2px); box-shadow: 0 .5rem 1rem rgba(0,0,0,0.05)!important; }
  .bg-orange-light { background-color: #fff3e0; }
  .text-orange { color: #fd7e14; }
</style>
