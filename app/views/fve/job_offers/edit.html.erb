<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-9">
      <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
          <h2 class="mb-0 text-warning">Modifier la mission</h2>
          <%= link_to fve_job_offer_path(@job_offer), class: "btn btn-link text-muted" do %>
            <i class="fas fa-times"></i> Annuler
          <% end %>
        </div>
        <div class="card-body p-4">
          <%# On appelle exactement le même partial _form %>
          <%= render 'form', job_offer: @job_offer %>
        </div>
      </div>

      <div class="mt-3 text-center">
        <%= link_to fve_job_offer_path(@job_offer),
                    data: { turbo_method: :delete, turbo_confirm: "Êtes-vous sûr de vouloir supprimer cette annonce ?" },
                    class: "text-danger small" do %>
          Supprimer définitivement l'annonce
        <% end %>
      </div>
    </div>
  </div>
</div>
