<div class="container min-vh-100 d-flex align-items-center justify-content-center">
  <div class="row w-100 justify-content-center">
    <div class="col-md-6 col-lg-5 mt-2">

      <div class="card shadow-sm p-4 rounded-4">
        <h1 class="fw-bold mb-3 text-center text-orange">Créer un compte</h1>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

          <div class="mb-3">
            <%= f.label :firstname, "Prénom", class: "form-label fw-semibold" %>
            <%= f.text_field :firstname, class: "form-control" %>
            <%= inline_error_for(resource, :firstname) %>
          </div>

          <div class="mb-3">
            <%= f.label :lastname, "Nom", class: "form-label fw-semibold" %>
            <%= f.text_field :lastname, class: "form-control" %>
            <%= inline_error_for(resource, :lastname) %>
          </div>

          <div class="mb-3">
            <%= f.label :username, "Nom d'utilisateur", class: "form-label fw-semibold" %>
            <%= f.text_field :username, class: "form-control" %>
            <%= inline_error_for(resource, :username) %>
          </div>

          <div class="mb-3">
            <%= f.label :email, "Adresse email", class: "form-label fw-semibold" %>
            <%= f.email_field :email, class: "form-control" %>
            <%= inline_error_for(resource, :email) %>
          </div>

          <div class="mb-3">
            <%= f.label :password, "Mot de passe", class: "form-label fw-semibold" %>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
            <small class="text-muted">
              Minimum 8 caractères avec majuscule, minuscule, chiffre et symbole.
            </small>
            <%= inline_error_for(resource, :password) %>
          </div>

          <div class="mb-3">
            <%= f.label :password_confirmation, "Confirmation du mot de passe", class: "form-label fw-semibold" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            <%= inline_error_for(resource, :password_confirmation) %>
          </div>

          <div class="mb-3">
            <%= f.label :address, "Adresse", class: "form-label fw-semibold" %>
            <%= f.text_field :address, class: "form-control" %>
            <%= inline_error_for(resource, :address) %>
          </div>

          <div class="row">
            <div class="col-md-6 mb-3">
              <%= f.label :zipcode, "Code postal", class: "form-label fw-semibold" %>
              <%= f.text_field :zipcode, class: "form-control" %>
              <%= inline_error_for(resource, :zipcode) %>
            </div>

            <div class="col-md-6 mb-3">
              <%= f.label :city, "Ville", class: "form-label fw-semibold" %>
              <%= f.text_field :city, class: "form-control" %>
              <%= inline_error_for(resource, :city) %>
            </div>
          </div>

          <div class="d-grid mt-3">
            <%= f.submit "Créer mon compte", class: "btn btn-orange btn-lg fw-bold" %>
          </div>

        <% end %>

        <div class="text-center mt-3">
          <%= link_to "Déjà un compte ? Se connecter", new_user_session_path, class: "text-decoration-none text-muted" %>
        </div>
      </div>
    </div>
  </div>
</div>

<footer class="text-center text-muted mt-2 mb-3">
  <small>© <%= Time.current.year %> MerchFlow — Votre assistant administratif merch.</small>
</footer>

