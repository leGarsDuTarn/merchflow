<div class="container min-vh-100 d-flex align-items-center justify-content-center mt-2">
  <div class="row w-100 justify-content-center">

    <div class="col-md-6 col-lg-5">

      <div class="card shadow-sm p-4 rounded-4">
        <h1 class="fw-bold mb-3 text-center text-orange">Modifier mon compte</h1>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

          <%# --- Données utilisateur (Requis par le modèle) --- %>

          <div class="mb-3">
            <%= f.label :firstname, "Prénom *", class: "form-label fw-semibold" %>
            <%# REQUIREMENT: firstname est requis %>
            <%= f.text_field :firstname, class: "form-control", required: true %>
            <%= inline_error_for(resource, :firstname)%>
          </div>

          <div class="mb-3">
            <%= f.label :lastname, "Nom *", class: "form-label fw-semibold" %>
            <%# REQUIREMENT: lastname est requis %>
            <%= f.text_field :lastname, class: "form-control", required: true %>
            <%= inline_error_for(resource, :lastname) %>
          </div>

          <div class="mb-3">
            <%= f.label :username, "Nom d'utilisateur", class: "form-label fw-semibold" %>
            <%= f.text_field :username, class: "form-control" %>
            <%= inline_error_for(resource, :username) %>
          </div>

          <div class="mb-3">
            <%= f.label :email, "Adresse email *", class: "form-label fw-semibold" %>
            <%# REQUIREMENT: email est requis %>
            <%= f.email_field :email, autofocus: true, class: "form-control", required: true %>
            <%= inline_error_for(resource, :email) %>
          </div>

          <%# --- Données optionnelles (Non requises par le modèle, mais importantes) --- %>

          <div class="mb-3">
            <%= f.label :phone_number, "Numéro de téléphone", class: "form-label fw-semibold" %>
            <%= f.text_field :phone_number, class: "form-control" %>
            <%= inline_error_for(resource, :phone_number) %>
          </div>

          <div class="mb-3">
            <%= f.label :address, "Adresse", class: "form-label fw-semibold" %>
            <%= f.text_field :address, class: "form-control" %>
            <%= inline_error_for(resource, :address) %>
          </div>

          <div class="row">
            <div class="col-md-6 mb-3">
              <%= f.label :zipcode, "Code postal", class: "form-label fw-semibold" %>
              <%= f.text_field :zipcode, class: "form-control" %>
            <%= inline_error_for(resource, :zipcode) %>
            </div>

            <div class="col-md-6 mb-3">
              <%= f.label :city, "Ville", class: "form-label fw-semibold" %>
              <%= f.text_field :city, class: "form-control" %>
              <%= inline_error_for(resource, :city) %>
            </div>
          </div>

          <%# --- Gestion des Mots de Passe --- %>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p class="text-orange small">
              En attente de confirmation pour : <%= resource.unconfirmed_email %>
            </p>
          <% end %>

          <hr class="my-4">

          <h5 class="fw-bold mb-3">Gestion du Mot de Passe</h5>

          <div class="mb-3">
            <%= f.label :password, "Nouveau mot de passe", class: "form-label fw-semibold" %>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
            <small class="text-muted">
              Laisser vide si vous ne souhaitez pas le changer.
            </small>
            <%= inline_error_for(resource, :password) %>
          </div>

          <div class="mb-3">
            <%= f.label :password_confirmation, "Confirmation du nouveau mot de passe", class: "form-label fw-semibold" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            <%= inline_error_for(resource, :password_confirmation) %>
          </div>

          <div class="mb-3">
            <%= f.label :current_password, "Mot de passe actuel *", class: "form-label fw-semibold" %>
            <%# REQUIREMENT: current_password est requis par Devise %>
            <%= f.password_field :current_password,
                                 autocomplete: "current-password",
                                 class: "form-control",
                                 required: true %>
            <small class="text-muted">
              Obligatoire pour valider **toutes** les modifications.
            </small>
            <%= inline_error_for(resource, :current_password) %>
          </div>

          <%# --- Boutons --- %>
          <div class="d-grid mt-4">
            <%= f.submit "Mettre à jour", class: "btn btn-orange btn-lg fw-bold" %>
          </div>

        <% end %>

        <hr class="my-4">

        <div class="text-center">
          <%= button_to "Supprimer mon compte",
                        registration_path(resource_name),
                        method: :delete,
                        data: { confirm: "Êtes-vous sûr de vouloir supprimer votre compte ? Cette action est irréversible." },
                        class: "btn btn-red mt-2 fw-semibold" %>
        </div>

        <div class="text-center mt-3">
          <%= link_to "Retour", root_path, class: "text-decoration-none text-muted" %>
        </div>

      </div>

    </div>
  </div>
</div>
