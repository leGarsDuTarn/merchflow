<div class="container min-vh-100 d-flex align-items-center justify-content-center">
  <div class="row w-100 justify-content-center">

    <div class="col-md-6 col-lg-5">

      <div class="card shadow-sm p-4 rounded-4">
        <h1 class="fw-bold mb-3 text-center text-orange">Modifier mon compte</h1>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

          <div class="mb-3">
            <%= f.label :firstname, "Prénom", class: "form-label fw-semibold" %>
            <%= f.text_field :firstname, class: "form-control" %>
            <%= inline_error_for(resource, :firstname) %>
          </div>

          <div class="mb-3">
            <%= f.label :lastname, "Nom", class: "form-label fw-semibold" %>
            <%= f.text_field :lastname, class: "form-control" %>
            <%= inline_error_for(resource, :lastname) %>
          </div>

          <div class="mb-3">
            <%= f.label :username, "Nom d'utilisateur", class: "form-label fw-semibold" %>
            <%= f.text_field :username, class: "form-control" %>
            <%= inline_error_for(resource, :username) %>
          </div>

          <div class="mb-3">
            <%= f.label :email, "Adresse email", class: "form-label fw-semibold" %>
            <%= f.email_field :email, autofocus: true, class: "form-control" %>
            <%= inline_error_for(resource, :email) %>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p class="text-orange small">
              En attente de confirmation pour : <%= resource.unconfirmed_email %>
            </p>
          <% end %>

          <div class="mb-3">
            <%= f.label :password, "Nouveau mot de passe", class: "form-label fw-semibold" %>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
            <small class="text-muted">
              Laisser vide si vous ne souhaitez pas le changer.
            </small>
            <%= inline_error_for(resource, :password) %>
          </div>

          <div class="mb-3">
            <%= f.label :password_confirmation, "Confirmation du nouveau mot de passe", class: "form-label fw-semibold" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            <%= inline_error_for(resource, :password_confirmation) %>
          </div>

          <div class="mb-3">
            <%= f.label :current_password, "Mot de passe actuel", class: "form-label fw-semibold" %>
            <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
            <small class="text-muted">
              Obligatoire pour valider les modifications.
            </small>
            <%= inline_error_for(resource, :current_password) %>
          </div>

          <div class="mb-3">
            <%= f.label :address, "Adresse", class: "form-label fw-semibold" %>
            <%= f.text_field :address, class: "form-control" %>
            <%= inline_error_for(resource, :address) %>
          </div>

          <div class="row">
            <div class="col-md-6 mb-3">
              <%= f.label :zipcode, "Code postal", class: "form-label fw-semibold" %>
              <%= f.text_field :zipcode, class: "form-control" %>
              <%= inline_error_for(resource, :zipcode) %>
            </div>

            <div class="col-md-6 mb-3">
              <%= f.label :city, "Ville", class: "form-label fw-semibold" %>
              <%= f.text_field :city, class: "form-control" %>
              <%= inline_error_for(resource, :city) %>
            </div>
          </div>

          <div class="d-grid mt-3">
            <%= f.submit "Mettre à jour", class: "btn btn-orange btn-lg fw-bold" %>
          </div>

        <% end %>

        <hr class="my-4">

        <!-- Suppression du compte -->
        <div class="text-center">
          <h5 class="fw-bold text-danger">Supprimer mon compte</h5>
          <%= button_to "Supprimer mon compte",
                        registration_path(resource_name),
                        method: :delete,
                        data: { confirm: "Êtes-vous sûr de vouloir supprimer votre compte ?" },
                        class: "btn btn-orange-outline mt-2" %>
        </div>

        <div class="text-center mt-3">
          <%= link_to "Retour", root_path, class: "text-decoration-none text-muted" %>
        </div>

      </div>

    </div>
  </div>
</div>

<footer class="text-center text-muted mt-2 mb-3">
  <small>© <%= Time.current.year %> MerchFlow — Votre assistant administratif merch.</small>
</footer>

