<div class="container min-vh-100 d-flex align-items-center justify-content-center">
  <div class="row w-100 justify-content-center">

    <div class="col-md-5 col-lg-4">
      <div class="card shadow-sm p-4 rounded-4">
        <h1 class="fw-bold mb-4 text-center text-orange">Connexion</h1>

        <%# On affiche les messages de succès (ex: "Vous allez recevoir un email...") %>
        <% if flash[:notice].present? %>
          <div class="alert alert-success rounded-3 small py-2 text-center mb-3">
            <%= flash[:notice] %>
          </div>
        <% end %>

        <%# Formulaire de connexion %>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { data: { turbo: false } }) do |f| %>

          <div class="mb-3">
            <%= f.label :email, "Adresse email", class: "form-label fw-semibold" %>

            <%= f.email_field :email,
                              autofocus: true,
                              autocomplete: "email",
                              class: "form-control #{'is-invalid border-danger' if flash[:alert]}",
                              required: true %>

            <%# Gestion erreur login %>
            <% if flash[:alert] %>
              <div class="text-flash-orange small mt-1">
                Email ou mot de passe incorrect.
              </div>
            <% end %>
          </div>

          <div class="mb-3">
            <%= f.label :password, "Mot de passe", class: "form-label fw-semibold" %>

            <div class="input-group" data-controller="password">
              <%= f.password_field :password,
                                   autocomplete: "current-password",
                                   class: "form-control border-end-0 #{'is-invalid border-danger' if flash[:alert]}",
                                   required: true,
                                   data: { password_target: "field" } %>

              <button type="button"
                      class="btn border border-start-0 bg-white text-orange <%= 'border-danger' if flash[:alert] %>"
                      data-action="click->password#toggle"
                      data-password-target="icon"
                      style="z-index: 0;">
                <i class="fa-solid fa-eye"></i>
              </button>
            </div>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="form-check mb-3">
              <%= f.check_box :remember_me, class: "form-check-input" %>
              <%= f.label :remember_me, "Se souvenir de moi", class: "form-check-label" %>
            </div>
          <% end %>

          <div class="d-grid mb-4">
            <%= f.submit "Se connecter", class: "btn btn-orange btn-lg fw-bold" %>
          </div>

        <% end %>

        <%# BLOC MOT DE PASSE OUBLIÉ (Style "Bloc de secours") %>
        <div class="mt-3 mb-2 p-3 border rounded-4 bg-light">
          <p class="small text-muted mb-2 text-center">
            Mot de passe oublié ? Réinitialisez-le ici :
          </p>
          <%# C'est ici qu'on met le lien automatique vers la route Devise %>
          <%= link_to 'Réinitialiser mon mot de passe',
                      new_password_path(resource_name),
                      class: 'btn btn-sm btn-orange-outline w-100 fw-bold' %>
        </div>

        <div class="text-center mt-4">
          <%= link_to "Créer un compte", new_user_registration_path, class: "text-decoration-none text-orange fw-semibold" %>
        </div>

      </div>
    </div>
  </div>
</div>
