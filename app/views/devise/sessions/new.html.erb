<div class="container min-vh-100 d-flex align-items-center justify-content-center">
  <div class="row w-100 justify-content-center">

    <div class="col-md-5 col-lg-4">

      <div class="card shadow-sm p-4 rounded-4">
        <h1 class="fw-bold mb-4 text-center text-orange">Connexion</h1>

        <!-- Notices classiques -->
        <% if flash[:notice].present? %>
          <div class="alert alert-success"><%= flash[:notice] %></div>
        <% end %>

        <!-- Erreurs INLINE pour email + password -->
        <% if flash[:alert].present? %>
          <div class="text-orange small mb-3 text-center">
            <%= flash[:alert] %>
          </div>
        <% end %>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <div class="mb-3">
            <%= f.label :email, "Adresse email", class: "form-label fw-semibold" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            <%= inline_error_for(resource, :email) %>
          </div>

          <div class="mb-3">
            <%= f.label :password, "Mot de passe", class: "form-label fw-semibold" %>
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
            <%= inline_error_for(resource, :password) %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="form-check mb-3">
              <%= f.check_box :remember_me, class: "form-check-input" %>
              <%= f.label :remember_me, "Se souvenir de moi", class: "form-check-label" %>
            </div>
          <% end %>

          <div class="d-grid">
            <%= f.submit "Se connecter", class: "btn btn-orange btn-lg fw-bold" %>
          </div>

        <% end %>

        <div class="text-center mt-3">
          <%= link_to "Mot de passe oublié ?", new_user_password_path, class: "text-decoration-none text-muted" %>
        </div>

        <div class="text-center mt-2">
          <%= link_to "Créer un compte", new_user_registration_path, class: "text-decoration-none text-orange fw-semibold" %>
        </div>

      </div>

    </div>
  </div>
</div>

<footer class="text-center text-muted mt-2 mb-3">
  <small>© <%= Time.current.year %> MerchFlow — Votre assistant administratif merch.</small>
</footer>
