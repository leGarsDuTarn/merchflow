<div class="container min-vh-100 d-flex align-items-center justify-content-center">
  <div class="row w-100 justify-content-center">

    <div class="col-md-5 col-lg-4">

      <div class="card shadow-sm p-4 rounded-4">
        <h1 class="fw-bold mb-4 text-center text-orange">Connexion</h1>

        <% if flash[:notice].present? %>
          <div class="alert alert-success"><%= flash[:notice] %></div>
        <% end %>

        <% if flash[:alert].present? %>
          <div class="text-orange small mb-3 text-center">
            <%= flash[:alert] %>
          </div>
        <% end %>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <div class="mb-3">
            <%= f.label :email, "Adresse email", class: "form-label fw-semibold" %>
            <%# AJOUT DE required: true ICI %>
            <%= f.email_field :email,
                              autofocus: true,
                              autocomplete: "email",
                              class: "form-control",
                              required: true %>
          </div>

          <div class="mb-3">
            <%= f.label :password, "Mot de passe", class: "form-label fw-semibold" %>
            <%# AJOUT DE required: true ICI %>
            <%= f.password_field :password,
                                 autocomplete: "current-password",
                                 class: "form-control",
                                 required: true %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="form-check mb-3">
              <%= f.check_box :remember_me, class: "form-check-input" %>
              <%= f.label :remember_me, "Se souvenir de moi", class: "form-check-label" %>
            </div>
          <% end %>

          <div class="d-grid mb-4">
            <%= f.submit "Se connecter", class: "btn btn-orange btn-lg fw-bold" %>
          </div>

        <% end %>

        <%# -------------------------------------------------------------------------------- %>
        <%# BLOC DE SECOURS (REMPLACE LE LIEN BRISE new_user_password_path) %>
        <div class="mt-3 mb-2 p-3 border rounded-4 bg-light">

          <p class="small text-muted mb-2 text-center">
            Mot de passe oublié ? Contactez l'administration pour obtenir un lien de secours :
          </p>

          <%= link_to 'Demander un lien de secours',
                      "mailto:grassiano.b@gmail.com?subject=Demande de réinitialisation de mot de passe MerchFlow",
                      class: 'btn btn-sm btn-orange-outline w-100' %>

        </div>
        <%# -------------------------------------------------------------------------------- %>

        <div class="text-center mt-4">
          <%= link_to "Créer un compte", new_user_registration_path, class: "text-decoration-none text-orange fw-semibold" %>
        </div>

      </div>

    </div>
  </div>
</div>
