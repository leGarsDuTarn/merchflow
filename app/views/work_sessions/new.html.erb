<div class="container min-vh-100 py-4">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">

      <%# Header : Titre à gauche, Flèche à droite (Copié de Contract) %>
      <div class="d-flex align-items-center mb-4">
        <div>
          <h1 class="fw-bold text-dark m-0">Nouvelle Mission</h1>
          <p class="text-muted small m-0">Déclarez vos heures et frais de mission.</p>
        </div>

        <%= link_to (@contract ? contract_path(@contract) : dashboard_path), class: "btn btn-white border shadow-sm rounded-circle ms-auto", style: "width:40px; height:40px; display:grid; place-items:center;" do %>
          <i class="fa-solid fa-arrow-left text-dark"></i>
        <% end %>
      </div>

      <%# Render du Partial Form %>
      <%= render 'form', work_session: @work_session %>

    </div>
  </div>
</div>
