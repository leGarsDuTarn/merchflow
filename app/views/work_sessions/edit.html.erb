<div class="container min-vh-100 py-4">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">

      <%# Header : Titre à gauche, Flèche à droite (Copié de Contract & New Mission) %>
      <div class="d-flex align-items-center mb-4">
        <div>
          <h1 class="fw-bold text-dark m-0">Modifier la mission</h1>
          <p class="text-muted small m-0">du <%= l @work_session.date, format: :long %></p>
        </div>

        <%= link_to work_session_path(@work_session), class: "btn btn-white border shadow-sm rounded-circle ms-auto", style: "width:40px; height:40px; display:grid; place-items:center;" do %>
          <i class="fa-solid fa-arrow-left text-dark"></i>
        <% end %>
      </div>

      <%# Render du Partial Form (Exactement comme dans le new) %>
      <%= render 'form', work_session: @work_session %>

    </div>
  </div>
</div>
