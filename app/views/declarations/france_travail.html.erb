<div class="container my-4">

  <%# --- 1. EN-TÊTE --- %>
  <div class="mb-3">
    <h1 class="fw-bold text-dark m-0">Déclaration France Travail</h1>
    <p class="text-muted small">Justificatifs mensuels pour vos actualisations</p>
  </div>

  <%# --- 2. RECHERCHE RAPIDE --- %>
  <div class="mb-3">
    <%= form_with url: france_travail_path, method: :get, local: true, class: "d-flex gap-2" do %>
      <%# Ajout de bg-white pour le fond blanc demandé %>
      <%= month_field_tag :date,
            "#{@year}-#{sprintf('%02d', @month)}",
            class: "form-control border-0 shadow-sm rounded-pill px-3 bg-white text-dark",
            onchange: 'this.form.submit()' %>
    <% end %>
  </div>

  <%# --- 3. CONTROL CENTER (Navigation + PDF Compact) --- %>
  <div class="card shadow-sm rounded-4 border-0 mb-4 bg-white overflow-hidden">
    <div class="card-body p-3 text-center">

      <%# Navigation Mois %>
      <div class="d-flex justify-content-between align-items-center mb-3">
        <%= link_to france_travail_path(year: @year, month: @month - 1),
                    class: "btn btn-light rounded-circle shadow-sm d-flex align-items-center justify-content-center",
                    style: "width: 40px; height: 40px;" do %>
          <i class="fa-solid fa-chevron-left text-muted"></i>
        <% end %>

        <div class="flex-grow-1 mx-2 mb-2">
          <h3 class="fw-bold text-capitalize m-0 text-orange">
            <%= I18n.l Date.new(@year, @month), format: "%B %Y" %>
          </h3>
          <span class="badge bg-light text-muted fw-bold mt-3 border">
            <%= @grouped.values.sum { |s| s.sum(&:duration_minutes) } / 60.0 %> h totales
          </span>
        </div>

        <%= link_to france_travail_path(year: @year, month: @month + 1),
                    class: "btn btn-light rounded-circle shadow-sm d-flex align-items-center justify-content-center",
                    style: "width: 40px; height: 40px;" do %>
          <i class="fa-solid fa-chevron-right text-muted"></i>
        <% end %>
      </div>

      <%# Bouton PDF (Version Compacte & Légère) %>
      <%# J'ai remplacé le gros bloc par un bouton blanc élégant %>
      <div class="d-flex justify-content-center">
        <%= link_to france_travail_path(year: @year, month: @month, format: :pdf),
            class: "btn btn-orange rounded-pill px-4 py-2 fw-bold shadow-sm d-flex align-items-center gap-2",
            style: "font-size: 0.9rem;",
            target: "_blank" do %>
          <i class="fa-solid fa-file-pdf"></i>
          <span>Télécharger le PDF</span>
        <% end %>
      </div>

    </div>
  </div>

  <%# --- 4. LISTE DES AGENCES --- %>
  <% if @grouped.empty? %>

    <div class="text-center py-5">
      <div class="text-muted opacity-25 mb-3">
        <i class="fa-solid fa-folder-open fa-3x"></i>
      </div>
      <h5 class="fw-bold text-muted">Rien à déclarer</h5>
      <p class="text-muted small">Aucune heure enregistrée pour ce mois-ci.</p>
    </div>

  <% else %>

    <p class="small fw-bold text-uppercase fs-5 ls-1 mb-3 ms-1">Détail par employeur</p>

    <% @grouped.each do |agency, sessions| %>
      <%
         # CALCULS
         total_minutes = sessions.sum(&:duration_minutes)
         hours = (total_minutes / 60.0).round(2)
         base_brut = sessions.sum(&:brut)
         total_cp = sessions.sum(&:amount_cp)
         declare = base_brut + total_cp
      %>

      <div class="card shadow-sm rounded-4 p-0 mb-3 bg-white border-0 overflow-hidden">

        <%# Header Agence %>
        <div class="card-header bg-white border-bottom-0 pt-3 px-3 pb-0 d-flex align-items-center">
          <div class="bg-orange-light text-orange rounded-3 p-2 me-3" style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
            <i class="fa-solid fa-briefcase"></i>
          </div>
          <h5 class="fw-bold text-dark m-0 text-truncate"><%= agency.upcase %></h5>
        </div>

        <div class="card-body px-3 pb-3 pt-2">

          <%# Heures %>
          <div class="d-flex justify-content-between align-items-center my-3">
            <span class="text-muted small">Heures</span>
            <span class="badge bg-light text-dark border fs-6"><%= hours %> h</span>
          </div>

          <%# Détails Chiffrés %>
          <div class="bg-orange-light rounded-3 p-3">
            <div class="d-flex justify-content-between mb-1">
              <span class="text-muted small">Base Brut</span>
              <span class="small fw-semibold"><%= number_to_currency(base_brut) %></span>
            </div>
            <div class="d-flex justify-content-between mb-2 border-bottom pb-2">
              <span class="text-muted small">Congés (CP)</span>
              <span class="small fw-semibold"><%= number_to_currency(total_cp) %></span>
            </div>

            <div class="d-flex justify-content-between align-items-center mt-1">
              <span class="text-orange small fw-bold text-uppercase">À Déclarer</span>
              <span class="fs-5 fw-bold text-orange"><%= number_to_currency(declare) %></span>
            </div>
          </div>

        </div>
      </div>
    <% end %>

  <% end %>

</div>
