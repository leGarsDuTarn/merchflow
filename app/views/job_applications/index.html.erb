<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h1 class="fw-bold text-dark">Mes Candidatures</h1>
      <p class="text-muted">Suivez l'état de vos demandes de mission en temps réel.</p>
    </div>
    <%= link_to job_offers_path, class: "btn btn-outline-primary shadow-sm" do %>
      <i class="fas fa-search me-2"></i>Trouver d'autres missions
    <% end %>
  </div>

  <div class="row">
    <% if @job_applications.any? %>
      <div class="col-12">
        <% @job_applications.each do |app| %>
          <div class="card shadow-sm border-0 mb-3 overflow-hidden bg-white">
            <div class="row g-0 align-items-stretch">
              <div class="col-auto" style="width: 6px; background-color: <%= job_status_color(app.status) %>;"></div>

              <div class="col">
                <div class="card-body d-flex flex-wrap align-items-center justify-content-between">

                  <div class="mb-2 mb-md-0 col-12 col-md-4">
                    <div class="d-flex align-items-center mb-1 flex-wrap">
                      <h5 class="card-title mb-0 me-3 fw-bold"><%= app.job_offer.title %></h5>
                      <%= job_status_badge(app.status) %>
                    </div>
                    <div class="text-muted small">
                      <i class="fas fa-building me-1"></i> <%= app.job_offer.company_name %> •
                      <i class="fas fa-map-marker-alt ms-2 me-1"></i> <%= app.job_offer.city %>
                    </div>
                  </div>

                  <div class="text-md-center col-12 col-md-4 my-2 my-md-0">
                    <div class="fw-bold text-dark">
                      <i class="far fa-calendar-alt me-1 text-primary"></i>
                      <%= l(app.job_offer.start_date, format: "%d %B %Y") %>
                    </div>
                    <div class="small text-muted">
                      Postulé le <%= l(app.created_at, format: "%d/%m/%y") %>
                    </div>
                  </div>

                  <div class="col-12 col-md-4 text-md-end mt-2 mt-md-0">
                    <%= link_to job_offer_path(app.job_offer), class: "btn btn-sm btn-light border me-1" do %>
                      <i class="fas fa-eye me-1"></i>Offre
                    <% end %>

                    <% if app.status == 'accepted' %>
                      <% contract = current_user.merch_contracts.find_by(fve_id: app.job_offer.fve_id) %>
                      <% if contract %>
                        <%= link_to contract_path(contract), class: "btn btn-sm btn-success shadow-sm" do %>
                          <i class="fas fa-file-contract me-1"></i>Contrat
                        <% end %>
                      <% end %>
                    <% end %>
                  </div>

                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="col-12 text-center py-5 bg-light rounded-4 border-2 border-dashed">
        <div class="mb-3 text-muted">
          <i class="fas fa-paper-plane fa-4x opacity-25"></i>
        </div>
        <h3>Vous n'avez pas encore postulé</h3>
        <p class="text-muted">Les missions qui vous correspondent n'attendent que vous.</p>
        <%= link_to "Parcourir les offres", job_offers_path, class: "btn btn-primary px-4 py-2" %>
      </div>
    <% end %>
  </div>
</div>
