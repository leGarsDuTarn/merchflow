<div class="container mt-5">
  <div class="row mb-5">
    <div class="col-md-8">
      <h1 class="display-5 fw-bold text-dark">Missions disponibles</h1>
      <p class="lead text-muted">Trouvez votre prochaine mission de merchandising en quelques clics.</p>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-3 mb-4">
      <div class="card border-0 shadow-sm p-3 sticky-top" style="top: 20px;">
        <h5 class="mb-3">Filtrer par</h5>
        <%= form_with url: job_offers_path, method: :get, class: "row g-3" do |f| %>
          <div class="col-12">
            <%= f.label :city, "Ville", class: "form-label small fw-bold" %>
            <%= f.text_field :city, value: params[:city], class: "form-control form-control-sm", placeholder: "Ex: Paris..." %>
          </div>
          <div class="col-12">
            <%= f.label :type, "Type de mission", class: "form-label small fw-bold" %>
            <%= f.select :type, JobOffer::MISSION_TYPES.map { |m| [m.capitalize, m] }, { include_blank: "Tous", selected: params[:type] }, { class: "form-select form-select-sm" } %>
          </div>
          <div class="col-12 mt-4">
            <%= f.submit "Rechercher", class: "btn btn-primary btn-sm w-100" %>
            <%= link_to "Réinitialiser", job_offers_path, class: "btn btn-link btn-sm w-100 text-muted mt-2" %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="col-lg-9">
      <% if @job_offers.any? %>
        <div class="row row-cols-1 row-cols-md-2 g-4">
          <% @job_offers.each do |offer| %>
            <div class="col">
              <div class="card h-100 border-0 shadow-sm hover-shadow transition">
                <div class="card-body">
                  <div class="d-flex justify-content-between mb-2">
                    <span class="badge bg-light text-primary border border-primary-subtle px-2 py-1">
                      <%= offer.mission_type.capitalize %>
                    </span>
                    <span class="fw-bold text-success"><%= offer.hourly_rate %>€/h</span>
                  </div>

                  <h5 class="card-title fw-bold mb-1"><%= offer.title %></h5>
                  <p class="text-muted small mb-3">
                    <i class="fas fa-store me-1"></i> <%= offer.store_name %> •
                    <i class="fas fa-map-marker-alt ms-2 me-1"></i> <%= offer.city %>
                  </p>

                  <div class="d-flex align-items-center text-secondary small mb-4">
                    <i class="far fa-calendar-alt me-2"></i>
                    <%= l(offer.start_date, format: "%d %b %Y") %>
                    <span class="mx-2">|</span>
                    <i class="far fa-clock me-2"></i>
                    <%= offer.start_date.strftime("%H:%M") %>
                  </div>

                  <%= link_to job_offer_path(offer), class: "btn btn-outline-primary w-100 stretched-link" do %>
                    Voir les détails
                  <% end %>
                </div>
                <div class="card-footer bg-transparent border-0 pt-0 pb-3">
                  <small class="text-muted italic">
                    Publié <%= time_ago_in_words(offer.created_at) %> ago
                  </small>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-5">
          <i class="fas fa-search fa-3x text-light mb-3"></i>
          <h3>Aucune mission trouvée</h3>
          <p class="text-muted">Essayez de modifier vos filtres ou revenez plus tard.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>

<style>
  .hover-shadow:hover {
    transform: translateY(-5px);
    box-shadow: 0 0.5rem 1.5rem rgba(0, 0, 0, 0.1) !important;
  }
  .transition {
    transition: all 0.3s ease;
  }
</style>
