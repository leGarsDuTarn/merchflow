<%# app/views/job_offers/show.html.erb %>

<div class="container my-5">

  <%# --- PRÉPARATION DES VARIABLES --- %>
  <%
     base_pay_inclusive = @job_offer.total_base_brut
     ifm_rate = @job_offer.ifm_rate || 10
     cp_rate = @job_offer.cp_rate || 10
     km_limit_value = (@job_offer.km_unlimited || @job_offer.km_limit.to_f == 0) ? 99999 : @job_offer.km_limit
  %>

  <%# --- BANDEAU CONFLIT AGENDA --- %>
  <% if user_signed_in? %>
    <% conflicts = current_user.conflicting_work_sessions(@job_offer) %>
    <% if conflicts.any? %>
      <div class="alert alert-warning border-0 rounded-4 shadow-sm p-3 mb-4 d-flex align-items-center">
        <div class="bg-warning bg-opacity-25 text-warning rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 45px; height: 45px; flex-shrink: 0;">
          <i class="fa-solid fa-calendar-day fs-5"></i>
        </div>
        <div>
          <h6 class="fw-bold mb-1 text-dark">Attention : avant de postuler vérifier votre agenda.</h6>
          <p class="small text-muted mb-0">
            Le <strong><%= l(conflicts.first.date, format: "%d %b") %></strong>, vous avez déjà une mission prévue de
            <strong><%= conflicts.first.start_time.strftime("%H:%M") %> - <%= conflicts.first.end_time.strftime("%H:%M") %></strong> pour <strong><%= conflicts.first.company %></strong>
          </p>
        </div>
      </div>
    <% end %>
  <% end %>

  <%# --- HEADER PAGE --- %>
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h1 class="fw-bold text-dark m-0"><%= @job_offer.title %></h1>
      <span class="text-muted small fw-bold text-uppercase fs-4 ls-1">Réf: #<%= @job_offer.id %></span>
      <p class="text-muted small mt-1 mb-0">
        Publié par <strong class="text-dark"><%= @job_offer.publisher_name %></strong>
        le <%= @job_offer.created_at.strftime("%d %b %Y") %>
      </p>
    </div>

    <%= link_to job_offers_path,
                class: "btn btn-white shadow-sm text-muted border rounded-circle p-0 d-flex align-items-center justify-content-center transition-hover",
                style: "width: 50px; height: 50px;" do %>
      <i class="fa-solid fa-arrow-left"></i>
    <% end %>
  </div>

  <div class="row g-4">

    <%# ===== COLONNE GAUCHE (DÉTAILS) ===== %>
    <div class="col-lg-8">

      <%# --- CARTE LIEU & INFOS --- %>
      <div class="card shadow border-0 rounded-4 overflow-hidden mb-4">
        <div class="card-body p-4 p-md-5">

          <div class="d-flex flex-column flex-md-row justify-content-between align-items-start gap-4 mb-4">
            <div class="d-flex align-items-start">
              <div class="bg-orange-light text-orange rounded-4 d-flex align-items-center justify-content-center me-3 shadow-sm" style="width: 65px; height: 65px; flex-shrink: 0;">
                <i class="fa-solid fa-store fs-3"></i>
              </div>

              <div>
                <span class="badge bg-orange-light text-orange border border-orange-subtle rounded-pill px-2 py-1 mb-2 fw-bold" style="font-size: 0.65rem; letter-spacing: 0.5px;">
                  <%= @job_offer.mission_type.capitalize %>
                </span>

                <h3 class="fw-bold text-dark mb-1"><%= @job_offer.store_name %></h3>

                <div class="d-flex flex-wrap gap-2 align-items-center text-muted small">
                  <span class="fw-bold text-uppercase ls-1" style="font-size: 0.75rem;"><%= @job_offer.agency_label %></span>
                  <span class="opacity-50">•</span>
                  <span>Client : <%= @job_offer.company_name %></span>
                </div>
              </div>
            </div>

            <div class="text-md-end bg-light px-4 py-2 rounded-4 border border-light shadow-sm">
              <span class="h3 fw-bold text-dark d-block mb-0"><%= number_to_currency(@job_offer.hourly_rate) %></span>
              <small class="text-muted text-uppercase fw-bold ls-1" style="font-size: 0.65rem;">Brut / Heure</small>
            </div>
          </div>

          <div class="bg-light p-3 rounded-4 border border-light mb-4">
             <div class="d-flex align-items-start">
               <i class="fa-solid fa-location-dot text-orange mt-1 me-3 fs-5"></i>
               <div>
                 <span class="d-block fw-bold text-dark fs-5"><%= @job_offer.address %></span>
                 <span class="text-muted"><%= @job_offer.zipcode %> <%= @job_offer.city %> <span class="fw-bold text-orange-light ms-1">Dept.(<%= @job_offer.department_code %>)</span></span>
               </div>
             </div>
          </div>

          <h5 class="fw-bold text-dark mb-3"><i class="fa-solid fa-align-left text-orange me-2"></i>Description & Tâches</h5>
          <div class="text-secondary lh-lg mb-4 bg-white p-3 border border-light rounded-4" style="white-space: pre-wrap; font-size: 0.95rem;">
            <%= @job_offer.description %>
          </div>

          <% if @job_offer.contact_email.present? || @job_offer.contact_phone.present? %>
            <hr class="text-muted opacity-10 my-4">
            <h6 class="fw-bold text-dark mb-3"><i class="fa-solid fa-address-card text-orange me-2"></i>Contact de l'agence</h6>
            <div class="d-flex flex-wrap gap-3">
              <% if @job_offer.contact_email.present? %>
                <div class="bg-white border rounded-pill px-4 py-2 shadow-sm d-flex align-items-center">
                  <i class="fa-regular fa-envelope text-orange me-2"></i>
                  <a href="mailto:<%= @job_offer.contact_email %>" class="text-dark text-decoration-none fw-bold small"><%= @job_offer.contact_email %></a>
                </div>
              <% end %>
              <% if @job_offer.contact_phone.present? %>
                <div class="bg-white border rounded-pill px-4 py-2 shadow-sm d-flex align-items-center">
                  <i class="fa-solid fa-phone text-orange me-2"></i>
                  <a href="tel:<%= @job_offer.contact_phone %>" class="text-dark text-decoration-none fw-bold small"><%= @job_offer.contact_phone %></a>
                </div>
              <% end %>
            </div>
          <% end %>

        </div>
      </div>

      <%# --- CARTE PLANNING --- %>
      <div class="card shadow border-0 rounded-4 mb-4 overflow-hidden">
        <div class="card-header bg-white border-0 pt-4 px-4 pb-0">
           <div class="d-flex justify-content-between align-items-center mb-3">
              <h5 class="fw-bold text-dark m-0"><i class="fa-regular fa-calendar-days text-orange me-2"></i>Planning Détaillé</h5>
              <div class="badge bg-orange-light text-orange rounded-pill px-3 py-2 border border-orange border-opacity-10">
                <i class="fa-solid fa-clock me-1"></i>
                <span class="fw-bold"><%= @job_offer.real_total_hours %>h</span>
                <span class="small opacity-75">total</span>
              </div>
           </div>
        </div>

        <div class="card-body p-4">
           <% if @job_offer.job_offer_slots.any? %>
              <div class="d-flex flex-column gap-2">
                <% @job_offer.job_offer_slots.order(:date).each do |slot| %>
                  <div class="d-flex align-items-center justify-content-between p-3 rounded-3 border border-light bg-white shadow-sm transition-hover">
                    <div class="d-flex align-items-center">
                      <div class="bg-orange-light text-orange rounded-3 d-flex flex-column align-items-center justify-content-center me-3" style="width: 45px; height: 45px;">
                        <span class="fw-bold lh-1" style="font-size: 1.1rem;"><%= slot.date.day %></span>
                        <span class="small fw-bold text-uppercase lh-1" style="font-size: 0.6rem;"><%= l(slot.date, format: "%b") %></span>
                      </div>
                      <div>
                        <span class="d-block fw-bold text-dark small"><%= l(slot.date, format: "%A").capitalize %></span>
                      </div>
                    </div>
                    <div class="text-end">
                      <div class="badge bg-gray-100 text-dark border border-secondary border-opacity-10 rounded-pill px-3 py-2 mb-1">
                        <%= slot.start_time.strftime("%H:%M") %> <i class="fa-solid fa-arrow-right-long mx-1 opacity-50"></i> <%= slot.end_time.strftime("%H:%M") %>
                      </div>
                      <% if slot.break_start_time %>
                        <div class="small text-muted" style="font-size: 0.7rem;">
                          <i class="fa-solid fa-mug-hot text-orange me-1"></i>Pause: <%= slot.break_start_time.strftime("%H:%M") %>-<%= slot.break_end_time.strftime("%H:%M") %>
                        </div>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>
            <% else %>
              <div class="p-3 bg-light rounded-3 text-center">
                Du <%= l(@job_offer.start_date, format: :long) %> au <%= l(@job_offer.end_date, format: :long) %>
              </div>
            <% end %>
        </div>
      </div>
    </div>

    <%# ===== COLONNE DROITE : SIMULATEUR ===== %>
    <div class="col-lg-4">

      <div class="card shadow border-0 rounded-4 mb-4 sticky-top overflow-hidden"
           style="top: 2rem; z-index: 10;"
           data-controller="calculator"
           data-calculator-base-value="<%= base_pay_inclusive %>"
           data-calculator-ifm-rate-value="<%= ifm_rate / 100.0 %>"
           data-calculator-cp-rate-value="<%= cp_rate / 100.0 %>"
           data-calculator-km-rate-value="<%= @job_offer.km_rate || 0 %>"
           data-calculator-km-limit-value="<%= km_limit_value %>">

        <div class="card-header bg-orange text-white p-4 border-0 position-relative overflow-hidden">
          <div class="position-absolute top-0 end-0 opacity-10 p-2">
            <i class="fa-solid fa-calculator fa-4x fa-beat" style="--fa-animation-duration: 3s; --fa-beat-scale: 1.1;"></i>
          </div>

          <div class="d-flex align-items-center mb-1">
             <i class="fa-solid fa-calculator me-2"></i>
             <h5 class="fw-bold mb-0 text-uppercase ls-1">Simulateur de Gains</h5>
          </div>
          <p class="small opacity-75 mb-0">Estimez votre salaire net en temps réel.</p>
        </div>

        <% if @job_offer.total_night_hours > 0 %>
           <div class="bg-dark text-white p-3 d-flex align-items-center justify-content-center gap-2 border-bottom border-secondary border-opacity-25">
             <i class="fa-solid fa-moon text-warning"></i>
             <small class="mb-0">
               Dont <strong><%= @job_offer.total_night_hours %>h de nuit</strong>
               (Majoration : +<%= @job_offer.night_rate.to_i %>%)
             </small>
           </div>
        <% end %>

        <div class="card-body p-4 bg-white">

          <% if @job_offer.km_rate.present? && @job_offer.km_rate > 0 %>
            <div class="mb-4 p-3 bg-orange-light bg-opacity-25 rounded-4 border border-orange border-dashed position-relative">
              <div class="d-flex justify-content-between align-items-center mb-2">
                <label class="form-label small fw-bold text-dark mb-0 text-uppercase ls-1">Vos Trajets (AR)</label>
                <% if @job_offer.km_unlimited || @job_offer.km_limit.to_f == 0 %>
                  <span class="badge bg-success text-white border border-success border-opacity-25 rounded-pill shadow-sm" style="font-size: 0.6rem;">
                    <i class="fa-solid fa-infinity me-1"></i> ILLIMITÉ
                  </span>
                <% else %>
                   <span class="badge bg-white text-orange border border-orange-subtle rounded-pill shadow-sm" style="font-size: 0.6rem;">
                    MAX <%= @job_offer.km_limit.to_i %> KM
                  </span>
                <% end %>
              </div>
              <div class="input-group shadow-sm rounded-pill overflow-hidden border border-white mb-2 focus-within-orange">
                <span class="input-group-text bg-white border-0 text-orange ps-3"><i class="fa-solid fa-car-side"></i></span>
                <input type="number"
                       data-calculator-target="kmInput"
                       data-action="input->calculator#calculate"
                       class="form-control border-0 py-2 fw-bold text-center"
                       placeholder="Saisissez vos kms...">
                <span class="input-group-text bg-white border-0 pe-3 text-muted small">km</span>
              </div>
              <div class="text-end">
                 <small class="text-muted fst-italic" style="font-size: 0.7rem;">Remboursement : <%= @job_offer.km_rate %> €/km</small>
              </div>
            </div>
          <% end %>

          <div class="d-flex justify-content-between mb-2">
            <span class="text-muted small">
              Salaire Base (<%= @job_offer.real_total_hours %>h)
              <% if @job_offer.total_night_hours > 0 %><span class="text-orange small">(incl. nuit)</span><% end %>
            </span>
            <span class="fw-bold text-dark"><%= number_to_currency(base_pay_inclusive) %></span>
          </div>

          <div class="d-flex justify-content-between mb-2">
            <span class="text-muted small">IFM (<%= ifm_rate.to_i %>%)</span>
            <span class="fw-semibold text-success" data-calculator-target="ifm">--</span>
          </div>

          <div class="d-flex justify-content-between mb-2 pb-2">
            <span class="text-muted small">Congés Payés (<%= cp_rate.to_i %>%)</span>
            <span class="fw-semibold text-success" data-calculator-target="cp">--</span>
          </div>

          <div class="border-top border-light mb-2"></div>

          <div class="d-flex justify-content-between mb-2">
            <span class="text-dark small fw-bold text-uppercase">Total Brut</span>
            <span class="fw-bold text-dark" data-calculator-target="totalBrut">--</span>
          </div>

          <div class="bg-light rounded-4 p-3 border border-light mt-3">
            <div class="d-flex justify-content-between align-items-center mb-2 pb-2 border-bottom border-secondary border-opacity-10">
               <small class="text-muted fw-bold text-uppercase d-block" style="font-size: 0.65rem;">Net Estimé (Salaire)</small>
               <span class="fw-bold text-dark" data-calculator-target="salaryNet">--</span>
            </div>

            <div class="d-flex justify-content-between align-items-center mb-2 d-none" data-calculator-target="kmRow">
               <small class="text-muted fw-bold text-uppercase d-block" style="font-size: 0.65rem;">+ Défraiement Km (Net)</small>
               <span class="fw-bold text-orange" data-calculator-target="kmResult">--</span>
            </div>

            <div class="d-flex justify-content-between align-items-center pt-1">
               <small class="text-success fw-bold text-uppercase d-block" style="font-size: 0.7rem;">TOTAL À PAYER</small>
               <h2 class="fw-bold text-success mb-0 fs-3" data-calculator-target="totalPocket">--</h2>
            </div>
          </div>

          <hr class="my-4 opacity-10">

          <% if user_signed_in? %>
            <% if @already_applied %>
              <div class="bg-success bg-opacity-10 border border-success rounded-4 p-4 text-center">
                <i class="fa-solid fa-circle-check text-success fs-2 mb-2"></i>
                <h6 class="fw-bold text-success mb-1">Candidature envoyée</h6>
                <p class="small text-muted mb-0">Le recruteur étudie votre profil.</p>
              </div>
            <% else %>
              <%= simple_form_for([@job_offer, @job_application]) do |f| %>
                <div class="mb-3">
                  <%= f.input :message,
                              label: false,
                              placeholder: "Un petit mot pour le recruteur ? (Optionnel)",
                              input_html: { rows: 3, class: "rounded-4 border-light bg-light small p-3 w-100 focus-within-orange" } %>
                </div>
                <%= f.button :submit, "Postuler maintenant", class: "btn btn-orange w-100 rounded-pill fw-bold py-3 shadow-sm pulse-button" %>
                <p class="text-center text-muted mt-3 mb-0" style="font-size: 0.75rem; line-height: 1.4;">
                  En postulant, vous acceptez de partager votre nom, prénom et données de contact avec <strong><%= @job_offer.publisher_name %></strong>.
                </p>
              <% end %>
            <% end %>
          <% else %>
             <%= link_to new_user_session_path, class: "btn btn-dark w-100 rounded-pill fw-bold py-3 shadow-sm" do %>
               <i class="fa-solid fa-right-to-bracket me-2"></i>Connexion requise
             <% end %>
          <% end %>

        </div>

        <div class="card-footer bg-light p-3 border-top-0 border-top border-white text-center">
            <small class="text-muted">Annonce gérée par <strong><%= @job_offer.publisher_name %></strong></small>
        </div>
      </div>
    </div>
  </div>
</div>
