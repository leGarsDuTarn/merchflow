<div class="container my-5">

  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h1 class="fw-bold text-dark m-0">Détail de l'offre</h1>
      <p class="text-muted mb-0">Réf: #OFFRE-<%= @job_offer.id %></p>
    </div>

    <%= link_to job_offers_path,
                class: "btn btn-light shadow-sm text-muted border rounded-circle p-3",
                style: "width: 50px; height: 50px; display: flex; align-items: center; justify-content: center;" do %>
      <i class="fa-solid fa-arrow-left"></i>
    <% end %>
  </div>

  <div class="row g-4">

    <div class="col-lg-8">
      <div class="card shadow border-0 rounded-4 overflow-hidden mb-4">
        <div class="card-body p-4 p-md-5">

          <div class="mb-4">
            <span class="badge bg-orange-light text-orange border border-orange-subtle rounded-pill px-3 py-2 small mb-3">
               <i class="fa-solid fa-tag me-1"></i> <%= @job_offer.mission_type.capitalize %>
            </span>

            <div class="d-flex flex-column flex-md-row justify-content-between align-items-start gap-3">
              <div class="d-flex align-items-center">
                <div class="bg-orange-light text-orange rounded-3 d-flex align-items-center justify-content-center me-3" style="min-width: 60px; height: 60px;">
                  <i class="fa-solid fa-briefcase fs-3"></i>
                </div>
                <div>
                  <h2 class="fw-bold text-dark mb-1"><%= @job_offer.title %></h2>
                  <div class="d-flex align-items-center text-muted">
                    <i class="fa-solid fa-store me-2 text-orange"></i>
                    <span><%= @job_offer.store_name %> • <%= @job_offer.company_name %></span>
                  </div>
                </div>
              </div>

              <div class="text-md-end bg-light p-3 rounded-4 border border-white shadow-sm min-w-150 w-sm-100">
                <span class="h2 fw-bold text-dark d-block mb-0"><%= number_to_currency(@job_offer.hourly_rate) %></span>
                <small class="text-muted text-uppercase fw-bold" style="font-size: 0.65rem;">BRUT / HEURE</small>
              </div>
            </div>
          </div>

          <hr class="text-muted opacity-25 my-4">

          <div class="row g-3 mb-4">
            <div class="col-md-6">
              <div class="bg-light rounded-4 p-3 border border-white h-100">
                <div class="d-flex align-items-center mb-1">
                  <i class="fa-regular fa-calendar text-orange me-2"></i>
                  <small class="text-muted fw-bold text-uppercase" style="font-size: 0.7rem;">Date de mission</small>
                </div>
                <span class="fw-bold text-dark fs-5"><%= l(@job_offer.start_date.to_date, format: :long).capitalize %></span>
              </div>
            </div>
            <div class="col-md-6">
              <div class="bg-light rounded-4 p-3 border border-white h-100">
                <div class="d-flex align-items-center mb-1">
                  <i class="fa-regular fa-clock text-orange me-2"></i>
                  <small class="text-muted fw-bold text-uppercase" style="font-size: 0.7rem;">Horaires</small>
                </div>
                <span class="fw-bold text-dark fs-5">
                  <%= @job_offer.start_date.strftime("%H:%M") %> à <%= @job_offer.end_date.strftime("%H:%M") %>
                </span>
              </div>
            </div>
          </div>

          <h5 class="fw-bold text-dark mb-3"><i class="fa-solid fa-align-left text-orange me-2"></i>Description de la mission</h5>
          <div class="text-secondary lh-lg mb-4" style="white-space: pre-wrap; font-size: 0.95rem;">
            <%= @job_offer.description %>
          </div>

          <% if @job_offer.address.present? %>
            <div class="bg-orange-light bg-opacity-25 rounded-4 p-3 d-flex align-items-center">
              <i class="fa-solid fa-location-dot text-orange fs-4 me-3"></i>
              <div>
                <small class="text-muted d-block">Lieu de la mission</small>
                <span class="text-dark fw-semibold"><%= @job_offer.address %>, <%= @job_offer.zipcode %> <%= @job_offer.city %></span>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-lg-4">
      <div class="card shadow border-0 rounded-4 sticky-top" style="top: 2rem;">
        <div class="card-body p-4">
          <h4 class="fw-bold text-dark mb-4">Postuler</h4>

          <% if user_signed_in? %>
            <% if @already_applied %>
              <div class="bg-success bg-opacity-10 border border-success rounded-4 p-4 text-center">
                <i class="fa-solid fa-circle-check text-success fs-1 mb-3"></i>
                <h5 class="fw-bold text-success mb-1">Candidature envoyée</h5>
                <p class="text-muted small mb-0">Vous recevrez une notification dès que le recruteur aura traité votre demande.</p>
                <%= link_to "Voir mes candidatures", my_applications_path, class: "btn btn-outline-success btn-sm rounded-pill mt-3 px-4" %>
              </div>
            <% else %>
              <%= simple_form_for([@job_offer, @job_application]) do |f| %>
                <div class="mb-3">
                  <%= f.input :message,
                              label: "Message (optionnel)",
                              placeholder: "Ex: Bonjour, je suis disponible...",
                              label_html: { class: "small fw-bold text-muted" },
                              input_html: { rows: 4, class: "rounded-3 border-light bg-light" } %>
                </div>

                <%= f.button :submit, "Envoyer ma candidature", class: "btn btn-orange btn-lg w-100 rounded-pill fw-bold shadow-sm" %>
              <% end %>
            <% end %>
          <% else %>
            <div class="text-center py-4">
              <div class="bg-light rounded-circle d-inline-flex p-3 mb-3">
                <i class="fa-solid fa-user-lock fs-3 text-muted"></i>
              </div>
              <p class="text-muted small mb-4">Connectez-vous pour postuler.</p>
              <%= link_to "Connexion / Inscription", new_user_session_path, class: "btn btn-orange w-100 rounded-pill fw-bold" %>
            </div>
          <% end %>

          <div class="mt-4 pt-4 border-top">
            <div class="d-flex justify-content-between mb-2">
              <small class="text-muted">Employeur</small>
              <small class="fw-bold text-dark"><%= @job_offer.agency_label %></small>
            </div>
            <div class="d-flex justify-content-between">
              <small class="text-muted">Type de contrat</small>
              <small class="badge bg-light text-dark border rounded-pill"><%= @job_offer.contract_type.upcase %></small>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
