<div class="container my-5">

  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h1 class="fw-bold text-dark m-0">Détail de l'offre</h1>
      <p class="text-muted mb-0">Réf: #OFFRE-<%= @job_offer.id %></p>
    </div>

    <%= link_to job_offers_path,
                class: "btn btn-light shadow-sm text-muted border rounded-circle p-3",
                style: "width: 50px; height: 50px; display: flex; align-items: center; justify-content: center;" do %>
      <i class="fa-solid fa-arrow-left"></i>
    <% end %>
  </div>

  <div class="row g-4">

    <div class="col-lg-8">

      <div class="card shadow border-0 rounded-4 overflow-hidden mb-4">
        <div class="card-body p-4 p-md-5">

          <div class="mb-4">
            <span class="badge bg-orange-light text-orange border border-orange-subtle rounded-pill px-3 py-2 small mb-3">
               <i class="fa-solid fa-tag me-1"></i> <%= @job_offer.mission_type.capitalize %>
            </span>

            <div class="d-flex flex-column flex-md-row justify-content-between align-items-start gap-3">
              <div class="d-flex align-items-center">
                <div class="bg-orange-light text-orange rounded-3 d-flex align-items-center justify-content-center me-3" style="min-width: 60px; height: 60px;">
                  <i class="fa-solid fa-briefcase fs-3"></i>
                </div>
                <div>
                  <h2 class="fw-bold text-dark mb-1"><%= @job_offer.title %></h2>
                  <div class="d-flex align-items-center text-muted">
                    <i class="fa-solid fa-store me-2 text-orange"></i>
                    <span><%= @job_offer.store_name %> • <%= @job_offer.agency_label rescue @job_offer.company_name %></span>
                  </div>
                </div>
              </div>

              <div class="text-md-end bg-light p-3 rounded-4 border border-white shadow-sm min-w-150 w-sm-100">
                <span class="h2 fw-bold text-dark d-block mb-0"><%= number_to_currency(@job_offer.hourly_rate) %></span>
                <small class="text-muted text-uppercase fw-bold" style="font-size: 0.65rem;">BRUT / HEURE</small>
              </div>
            </div>
          </div>

          <hr class="text-muted opacity-25 my-4">

          <div class="row g-3 mb-4">
            <div class="col-md-6">
              <div class="bg-light rounded-4 p-3 border border-white h-100">
                <div class="d-flex align-items-center mb-1">
                  <i class="fa-regular fa-calendar text-orange me-2"></i>
                  <small class="text-muted fw-bold text-uppercase" style="font-size: 0.7rem;">Date de mission</small>
                </div>
                <span class="fw-bold text-dark fs-5"><%= l(@job_offer.start_date.to_date, format: :long).capitalize %></span>
              </div>
            </div>
            <div class="col-md-6">
              <div class="bg-light rounded-4 p-3 border border-white h-100">
                <div class="d-flex align-items-center mb-1">
                  <i class="fa-regular fa-clock text-orange me-2"></i>
                  <small class="text-muted fw-bold text-uppercase" style="font-size: 0.7rem;">Horaires</small>
                </div>
                <span class="fw-bold text-dark fs-5">
                  <%= @job_offer.start_date.strftime("%H:%M") %> à <%= @job_offer.end_date.strftime("%H:%M") %>
                </span>
                <% if @job_offer.duration_minutes > 0 %>
                  <small class="text-muted d-block mt-1">
                    Soit <%= (@job_offer.duration_minutes / 60.0).round(2) %>h de travail
                  </small>
                <% end %>
              </div>
            </div>
          </div>

          <% if @job_offer.break_start_time.present? && @job_offer.break_end_time.present? %>
             <div class="d-flex align-items-center mb-4 bg-white border border-dashed rounded-3 p-2 px-3 w-auto d-inline-flex">
                <i class="fa-solid fa-mug-hot text-muted me-2"></i>
                <small class="text-muted">Pause prévue de <%= @job_offer.break_start_time.strftime("%H:%M") %> à <%= @job_offer.break_end_time.strftime("%H:%M") %></small>
             </div>
          <% end %>

          <h5 class="fw-bold text-dark mb-3 mt-2"><i class="fa-solid fa-align-left text-orange me-2"></i>Description</h5>
          <div class="text-secondary lh-lg mb-4" style="white-space: pre-wrap; font-size: 0.95rem;">
            <%= @job_offer.description %>
          </div>

          <% if @job_offer.address.present? %>
            <div class="bg-orange-light bg-opacity-25 rounded-4 p-3 d-flex align-items-center">
              <i class="fa-solid fa-location-dot text-orange fs-4 me-3"></i>
              <div>
                <small class="text-muted d-block">Lieu exact</small>
                <span class="text-dark fw-semibold"><%= @job_offer.address %>, <%= @job_offer.zipcode %> <%= @job_offer.city %></span>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <% if @job_offer.km_rate.present? && @job_offer.km_rate > 0 %>
        <div class="card shadow-sm border-0 rounded-4 mb-4">
          <div class="card-body p-4 d-flex align-items-center">
             <div class="bg-light rounded-circle p-3 me-3 text-orange"><i class="fa-solid fa-car"></i></div>
             <div>
               <h6 class="fw-bold mb-1">Défraiement Kilométrique</h6>
               <p class="mb-0 text-muted small">
                 Prise en charge à hauteur de <strong><%= @job_offer.km_rate %>€/km</strong>
                 <% if @job_offer.km_unlimited %>
                   (Sans limitation de distance)
                 <% elsif @job_offer.km_limit.present? %>
                   (Dans la limite de <%= @job_offer.km_limit.to_i %> km)
                 <% end %>
               </p>
             </div>
          </div>
        </div>
      <% end %>

    </div>

    <div class="col-lg-4">

      <%
         # Calculs à la volée pour l'affichage (Logique Show)
         hours = @job_offer.duration_minutes / 60.0
         base_pay = hours * @job_offer.hourly_rate

         # Interim standard : 10% IFM + 10% CP
         ifm = (@job_offer.contract_type.downcase.include?('interim') || @job_offer.contract_type.downcase.include?('cidd')) ? base_pay * 0.10 : 0
         cp = (base_pay + ifm) * 0.10

         total_estime_brut = base_pay + ifm + cp
      %>

      <div class="card shadow border-0 rounded-4 mb-4 sticky-top" style="top: 2rem; z-index: 10;">
        <div class="card-header bg-orange text-white p-4 rounded-top-4 border-0">
          <h5 class="fw-bold mb-0"><i class="fa-solid fa-coins me-2"></i>Rémunération estimée</h5>
          <small class="opacity-75">Pour la totalité de la mission</small>
        </div>

        <div class="card-body p-4 bg-white">
          <div class="d-flex justify-content-between mb-2">
            <span class="text-muted small">Salaire de base (<%= hours.round(2) %>h)</span>
            <span class="fw-bold"><%= number_to_currency(base_pay) %></span>
          </div>

          <% if ifm > 0 %>
            <div class="d-flex justify-content-between mb-2">
              <span class="text-muted small">Indemnités (IFM 10%)</span>
              <span class="fw-semibold text-success">+ <%= number_to_currency(ifm) %></span>
            </div>
          <% end %>

          <div class="d-flex justify-content-between mb-3 border-bottom pb-3">
            <span class="text-muted small">Congés Payés (CP 10%)</span>
            <span class="fw-semibold text-success">+ <%= number_to_currency(cp) %></span>
          </div>

          <div class="d-flex justify-content-between align-items-end mb-4">
            <div>
               <h3 class="fw-bold text-dark mb-0"><%= number_to_currency(total_estime_brut) %></h3>
               <small class="text-muted fw-bold" style="font-size: 0.65rem;">TOTAL BRUT ESTIMÉ</small>
            </div>
          </div>

          <% if user_signed_in? %>
            <% if @already_applied %>
              <div class="bg-success bg-opacity-10 border border-success rounded-4 p-3 text-center">
                <i class="fa-solid fa-circle-check text-success fs-3 mb-2"></i>
                <h6 class="fw-bold text-success mb-1">Candidature envoyée !</h6>
                <%= link_to "Mes candidatures", my_applications_path, class: "btn btn-link text-success p-0 small fw-bold" %>
              </div>
            <% else %>
              <%= simple_form_for([@job_offer, @job_application]) do |f| %>
                <div class="mb-3">
                  <%= f.input :message,
                              label: false,
                              placeholder: "Ajouter un message au recruteur (Optionnel)...",
                              input_html: { rows: 3, class: "rounded-3 border-light bg-light small" } %>
                </div>
                <%= f.button :submit, "Postuler à cette mission", class: "btn btn-orange w-100 rounded-pill fw-bold py-3 shadow-sm pulse-button" %>
              <% end %>
              <p class="text-center text-muted mt-3 mb-0" style="font-size: 0.70rem;">
                En postulant, vous partagez votre profil MerchFlow avec <strong><%= @job_offer.company_name %></strong>.
              </p>
            <% end %>
          <% else %>
            <div class="text-center py-3 bg-light rounded-4">
              <p class="text-muted small mb-3">Connectez-vous pour postuler.</p>
              <%= link_to "Connexion / Inscription", new_user_session_path, class: "btn btn-orange btn-sm rounded-pill fw-bold px-4" %>
            </div>
          <% end %>

        </div>

        <div class="card-footer bg-light p-3 rounded-bottom-4 border-top-0">
          <div class="d-flex align-items-center justify-content-between">
            <small class="text-muted">Offre publiée par</small>
            <span class="badge bg-white text-dark border shadow-sm"><%= @job_offer.agency_label rescue "Recruteur" %></span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .pulse-button {
    animation: pulse-orange 2s infinite;
  }
  @keyframes pulse-orange {
    0% { box-shadow: 0 0 0 0 rgba(253, 126, 20, 0.4); }
    70% { box-shadow: 0 0 0 10px rgba(253, 126, 20, 0); }
    100% { box-shadow: 0 0 0 0 rgba(253, 126, 20, 0); }
  }
</style>
